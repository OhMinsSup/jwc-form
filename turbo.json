{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "topo": {
      "dependsOn": ["^topo"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".cache/tsbuildinfo.json", "dist/**"]
    },
    "format": {
      "outputLogs": "new-only"
    },
    "lint": {
      "dependsOn": ["^topo", "^build"]
    },
    "typecheck": {
      "dependsOn": ["^topo", "^build"],
      "outputs": [".cache/tsbuildinfo.json"]
    },
    "sort": {
      "cache": false
    },
    "generate:types": {
      "cache": false
    },
    "generate:importmap": {
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "//#clean": {
      "cache": false
    },
    "migrate": {
      "cache": false,
      "interactive": true
    },
    "migrate:create": {
      "cache": false,
      "interactive": true
    },
    "migrate:fresh": {
      "cache": false,
      "persistent": true
    },
    "codegen": {
      "cache": false
    },
    "ui-add": {
      "cache": false,
      "interactive": true
    }
  },
  "globalEnv": [
    "SKIP_ENV_VALIDATION",
    "PAYLOAD_PRIVATE_SECRET",
    "PAYLOAD_PRIVATE_REVALIDATION_KEY",
    "NEXT_PUBLIC_APP_URL",
    "DATABASE_ENGINE",
    "DATABASE_URL"
  ],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "npm_lifecycle_event"
  ]
}
